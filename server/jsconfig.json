{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/controllers": ["./src/controllers"],
      "@/routes": ["./src/routes"],
      "@/models": ["./src/models"],
      "@/services": ["./src/services"],
      "@/constants/*": ["./src/constants/*"],
      "@/validators": ["./src/validators"]
    }
  },
  "exclude": ["node_modules", "compiled", "public"]
}
